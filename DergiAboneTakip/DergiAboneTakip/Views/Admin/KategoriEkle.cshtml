@model DergiAboneTakip.Models.KategoriTablosu
@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<form method="post" class="form-group">

    <div style="display:none">

        <input type="text" name="Durum" value="True" />

    </div>

    <div class="form-group">
        <input type="text" name="KategoriAdi" class="form-control rounded-left" placeholder="Kategori Adı" required>
    </div>
    <div class="form-group">
        <button type="submit" class="form-control btn btn-primary rounded submit px-3">Kategori Ekle</button>
    </div>
</form>
